.overlay-screen-contact {
  .contact-form-wrapper {
    .page-margins;

    .title-overlay {

      .font-m3;
      @media screen and (min-width: 40em) {
        .type-light;
        .font-l3;
      }

      letter-spacing: -.05em;
      line-height: 1;
    }

    textarea {
      margin-bottom: 2rem;
      line-height: 1.625em;
    }
    .fieldset-group {
      margin-bottom: 2rem;
      overflow: hidden; //fixes float
      &:last-of-type {
        margin-bottom: 3rem;
      }
      &.services {
        .btn-toggle {
          display: inline-block;

          width: 49.25%;
          margin-bottom: 1.5%;
          &:nth-of-type(even) {
            margin-left: 1.5%;
          }
          @media screen and (min-width: 40em) {
            width: 24%;
            & + .btn-toggle { margin-left: 4/3%; }
          }
        }
      }
      .btns-group {
        max-width: 100%;

      }
    }
    .fieldset-group-title {
      .font-s2;
      .section-subtitle(@color-medium);
      margin-bottom: .75rem;

      .subtext {
        .type-regular;
        text-transform: none;
        letter-spacing: 0;
      }
    }
    .ancillary-contact {
      .inline-block-whitespace;

      padding-top: 1.5rem;

      .wrapper-connect,
      .wrapper-visit {
        display: inline-block;
        vertical-align: top;
        margin-bottom: 2em;

        .title-ancillary {
          .font-s2;
          .section-subtitle(@color-medium);
          margin-bottom: .25em;
        }
      }

      .wrapper-connect {
        width: 100%;
        @media screen and (min-width: 40em) {
          width:33.33%;
        }

        .list {
          > a {
            float: left;
            margin-right: 1em;
            @media screen and (min-width: 40em) {
              clear: both;
            }
          }
        }
      }
      .wrapper-visit {
        width: 100%;
        @media screen and (min-width: 40em) {
          width: 66.66%;
        }

      }

      .wrapper-connect a {
        .font-s2;
        @media screen and (min-width: 40em) { .font-s3; }
      }

      .wrapper-visit {
        .inline-block-whitespace;
        > .location-wrapper {
          .font-s2;
          @media screen and (min-width: 40em) { .font-s3; }

          color: @color-medium;
          display: inline-block;
          width: 50%;
          vertical-align: top;
          & + .location-wrapper { padding-left: 1.25em; }
        }
      }
    }


  }
}