header {
  .col-left,
  .col-right {
    height: 300px;
    @media screen and (min-width: 50em) { height: 400px; }
  }
  .title-page {
    .font-l3;
    .type-light;
    .std-xpadding;
    padding-top: 2.5rem;
    letter-spacing: -.05em;
    line-height: 1;
  }
  .description-page {
    .font-m2;
    .std-xpadding;
    .position(absolute, auto, 0, 2.5rem, 0);

    color: @color-well;
  }
}