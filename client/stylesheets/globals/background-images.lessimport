[class^="bg-image"],
[class*=" bg-image"] {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  overflow: hidden;

  &[class*="how"] { background-image: url('https://farm4.staticflickr.com/3770/13820513543_b5e11b52ba_z_d.jpg'); }

  &[class*="what"] {
    background: @color-raw;
    &:before {
      .type-semibold;
      content: 'WorkCraft ObservePlay ExperimentReconstruct PushDiscover Deconstruct ChallengeEnjoy';
      .position(absolute, -5%, auto, auto, -5%);
      color: @color-raw-alt;
      font-size: 775%;
      line-height: .80em;
      z-index: 0;
      letter-spacing: -.05em;
    }
  }
  &[class*="careers"] { background-image: url('img/test/1.jpg'); }
  &[class*="who-we-are"] { background-image: url('img/test/2.jpg'); }
  &[class*="who-we-are-2"] { background-image: url('img/test/3.jpg'); }
  &[class*="who-we-are-3"] { background-image: url('img/test/4.jpg'); }

  &[class*="test-1"] { background-image: url('img/test/5.jpg'); }
  &[class*="test-2"] { background-image: url('img/test/6.jpg'); }
  &[class*="test-3"] { background-image: url('img/test/7.jpg'); }
}